<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="device_view_form" model="ir.ui.view">
        <field name="name">device_view_form</field>
        <field name="model">devices.model</field>
        <field name="arch" type="xml">
            <form string="services_form">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="serial_number"/>
                            <field name="create_date"/>
                            <field name="death_date"/>
                        </group>
                        <group>
                            <field name="description"/>
                            <field name="owner_id" strin="Владелец счетчика"/>
                        </group>
                    </group>
                    <notebook attrs="{'invisible': [('id', '=', False)]}">
                        <page name="services_page" string="Предоставленные Сервисы">
                            <field name="service_id">
                                <tree editable="top">
                                    <field name="service_day"/>
                                    <field name="device_id" invisible="1"/>
                                    <field name="service_id"/>
                                    <field name="status"/>
                                    <field name="price"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="device_view_tree" model="ir.ui.view">
        <field name="name">device_view_tree</field>
        <field name="model">devices.model</field>
        <field name="arch" type="xml">
            <tree string="device_tree">
                <field name="name"/>
                <field name="serial_number"/>
                <field name="create_date"/>
                <field name="death_date"/>
            </tree>
        </field>
    </record>

    <record id="action_device_id" model="ir.actions.act_window">
        <field name="name">Devices</field>
        <field name="res_model">devices.model</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="Devices" id="devices_sub_menu" parent="services_main_menu" action="action_device_id" sequence="2"/>

</odoo>